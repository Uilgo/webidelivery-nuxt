{
	"name": "webidelivery",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"preview": "nuxt preview",
		"postinstall": "nuxt prepare",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"check": "pnpm run format:check && pnpm run lint && pnpm run typecheck",
		"fix": "pnpm run format && pnpm run lint:fix",
		"typecheck": "nuxt typecheck",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.vue": [
			"eslint --fix"
		],
		"*.{css,scss,html,json,md}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@nuxt/eslint": "1.12.1",
		"@nuxt/icon": "2.2.0",
		"@nuxt/image": "2.0.0",
		"@nuxtjs/color-mode": "4.0.0",
		"@nuxtjs/supabase": "2.0.3",
		"@pinia/nuxt": "0.11.3",
		"@vee-validate/nuxt": "4.15.1",
		"@vee-validate/zod": "^4.15.1",
		"@vueuse/core": "^14.1.0",
		"browser-image-compression": "^2.0.2",
		"eslint": "^9.39.2",
		"nuxt": "^4.2.2",
		"pinia": "^3.0.4",
		"vue": "^3.5.26",
		"vue-router": "^4.6.4",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@iconify-json/lucide": "^1.2.84",
		"@tailwindcss/vite": "^4.1.18",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"husky": "^8.0.0",
		"lint-staged": "^16.2.7",
		"prettier": "^3.7.4",
		"prettier-plugin-vue": "^1.1.6",
		"tailwindcss": "^4.1.18"
	}
}
